<div class="container-p4">

    <div class="row">
        <div class="cold-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="editarUsuario/{{persona.idPersona}}" method="POST">

                     <div class="form-group" style="text-align: center;">
                            <img src="/img/editar.png" alt="Third slide">
                        </div>

                         <div class="form-group">

                            <input type="hidden" value="{{persona.idTipop}}" name="idTipop" class="form-control" placeholder="descripcionTipoEmpresa">

                        </div>
                         <div class="form-group">

                            <input type="hidden" value="{{persona.idEstado}}" name="idEstado" class="form-control" placeholder="descripcionTipoEmpresa">

                        </div>
                         <div class="form-group">

                            <input type="hidden" value="{{persona.rutPersona}}" name="rutPersona" class="form-control" placeholder="descripcionTipoEmpresa">

                        </div>
                      
                        <div class="form-group">

                            <input type="text" value="{{persona.nombresPersona}}" name="nombresPersona" class="form-control" placeholder="nombreTipoEmpresa">

                        </div>
                         <div class="form-group">

                            <input type="text" value="{{persona.apellidoPersona}}" name="apellidoPersona" class="form-control" placeholder="descripcionTipoEmpresa">

                        </div>
                         <div class="form-group">

                            <input type="hidden" value="{{persona.correoPersona}}" name="correoPersona" class="form-control" placeholder="descripcionTipoEmpresa">

                        </div>
                        
                         <div class="form-group">

