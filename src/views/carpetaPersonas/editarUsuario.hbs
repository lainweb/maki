                         <div class="form-group">

                            <input type="hidden" value="{{persona.imagenPersona}}" name="imagenPersona" class="form-control" placeholder="descripcionTipoEmpresa">

                        </div>
                      

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Actualizar
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>

    </div>


</div>