<div class="container-p4">

    <div class="row">
        <div class="cold-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{producto.idProducto}}" method="POST">
                        <div class="form-group">

                            <input type="number" value="{{producto.idCuenta}}" class="form-control" name="idCuenta" placeholder="idCuenta" autofocus>

                        </div>
                        <div class="form-group">

                            <input type="text" value="{{producto.nombreProducto}}" name="nombreProducto" class="form-control" placeholder="nombreProducto">

                        </div>
                         <div class="form-group">

                            <input type="number" value="{{producto.cantidadProducto}}" name="cantidadProducto" class="form-control" placeholder="cantidadProducto">

                        </div>
                         <div class="form-group">

                            <input type="text" value="{{producto.descripcionProducto}}" name="descripcionProducto" class="form-control" placeholder="descripcionProducto">

                        </div>
                         <div class="form-group">

                            <input type="date"{{producto.fechaProducto}} name="fechaProducto" class="form-control" placeholder="fechaProducto">

