<div class="container-p4">

    <div class="row">
        <div class="cold-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/carpetaEmpresa/editEmpresa/{{empresa.idEmpresa}}" method="POST">

                        <div class="form-group" style="text-align: center;">
                            <img src="/img/editar.png" alt="Third slide">
                        </div>


                        <div class="form-group">

                            <input type="hidden" value="{{empresa.idTipo}}" name="idTipo" class="form-control"
                                placeholder="idTipo">

                        </div>
                        <div class="form-group">

                            <input type="text" value="{{empresa.nombreEmpresa}}" name="nombreEmpresa"
                                class="form-control" placeholder="nombreEmpresa">

                        </div>
                        <div class="form-group">

                            <input type="text" value="{{empresa.sloganEmpresa}}" name="sloganEmpresa"
                                class="form-control" placeholder="sloganEmpresa">

                        </div>
                        <div class="form-group">

                            <input type="text" value="{{empresa.ciudadEmpresa}}" name="ciudadEmpresa"
                                class="form-control" placeholder="ciudadEmpresa">

                        </div>
                        <div class="form-group">

                            <input type="text" value="{{empresa.fonoEmpresa}}" name="fonoEmpresa" class="form-control"
                                placeholder="fonoEmpresa">

                        </div>
                        <div class="form-group">

                            <input type="text" value="{{empresa.horarioEmpresa}}" name="horarioEmpresa"
                                class="form-control" placeholder="horarioEmpresa">

                        </div>
                        <div class="form-group">

                            <input  type="hidden" value="{{empresa.suscripcionEmpresa}}" name="suscripcionEmpresa"
                                class="form-control" placeholder="suscripcionEmpresa">

                        </div>
                        <div class="form-group">

                            <input  type="hidden" value="{{empresa.estrellasEmpresa}}" name="estrellasEmpresa"
                                class="form-control" placeholder="estrellasEmpresa">

                        </div>
                        <div class="form-group">

                            <input  type="hidden" value="{{empresa.fechaEmpresa}}" name="fechaEmpresa" class="form-control"
                                placeholder="fechaEmpresa">

                        </div>


                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Actualizar
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>

    </div>


</div>